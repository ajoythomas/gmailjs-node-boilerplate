{
    "manifest_version": 3,
    "name": "Linky Linkerson For Gmail",
    "short_name": "gmailjsnode",
    "version": "1.1",
    "author": "Ajoy Thomas",

    "description": "hyperlinks text when you paste a link within gmail without having to use the link button",

    "content_scripts": [
        {
            "matches": [ "*://mail.google.com/*" ],
            "js": [
                "src/extensionInjector.js"
            ],
            "run_at": "document_start"
        }
    ],
    "permissions": [
        "clipboardRead",
        "clipboardWrite",
        "tabs"
      ],

    "web_accessible_resources": [{
        "resources": [
            "dist/gmailJsLoader.js",
            "dist/extension.js",
            "dist/gmailJsLoader.js.map",
            "dist/extension.js.map"
        ],
        "matches": ["<all_urls>"]
    }],
    "host_permissions": [
        "*://mail.google.com/*"
    ]
}
